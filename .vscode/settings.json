{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "cSpell.words": [
    "boder",
    "clsx",
    "dracula",
    "ecma",
    "esnext",
    "isodate",
    "jsdevtools",
    "knip",
    "lintstagedrc",
    "lucide",
    "mdast",
    "nextjs",
    "opengraph",
    "Parens",
    "Pluggable",
    "precommit",
    "rehype",
    "shadcn",
    "slugified",
    "tailwindcss",
    "unist",
    "velite",
    "Velite",
    "vfile"
  ],
  "css.lint.unknownAtRules": "ignore",
  "typescript.enablePromptUseWorkspaceTsdk": true
}
